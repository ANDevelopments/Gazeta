<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/my_message"
        android:id="@+id/myEditTextLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/myEditText"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/myEditText"
        app:layout_constraintStart_toEndOf="@id/myEditTextLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/myEditTextLabel"
        app:layout_constraintBottom_toBottomOf="@id/myEditTextLabel"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myEditTextLabel"
        android:text="@string/nav1"
        android:id="@+id/toNav1"
        android:layout_margin="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>